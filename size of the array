#include <iostream>
using namespace std;

const int MAX_SIZE = 100;

int main() {
    int arr[MAX_SIZE];
    int size;
    int sum = 0;

    cout << "Enter the size of the array: ";
    cin >> size;

    cout << "Enter " << size << " values: ";
    for (int i = 0; i < size; i++) {
        cin >> arr[i];
        sum += arr[i];
    }

    cout << "The sum of the values in the array is: " << sum << endl;

    return 0;
}
