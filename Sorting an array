#include <iostream>
#include <algorithm> // Required for std::sort
using namespace std;

int main() {
    int arr[] = {5, 3, 1, 6, 4, 8, 2, 7};
    int n = sizeof(arr)/sizeof(arr[0]);

    // Sort the array
    sort(arr, arr+n);

    // Print the sorted array
    cout << "Sorted array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
